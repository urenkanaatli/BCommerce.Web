@model BrandGroupByFirstLetterDTO
<section class="uk-section uk-section-small">
    <div class="uk-container">
        <div class="uk-grid-medium uk-child-width-1-1 uk-grid uk-grid-stack" uk-grid="">
            <div class="uk-text-center uk-first-column">
                <ul class="uk-breadcrumb uk-flex-center uk-margin-remove">
                    <li>
                        <a href="index.html">Home</a>
                    </li>
                    <li><span>Brands</span></li>
                </ul>
                <h1 class="uk-margin-small-top uk-margin-remove-bottom">Brands</h1>
            </div>
            <div class="uk-grid-margin uk-first-column">
                <div class="uk-card uk-card-default tm-ignore-container">
                    <header class="uk-card-header uk-background-default">
                        <nav>
                            <ul class="uk-subnav uk-flex-center uk-margin-remove">
                                <li>
                                    <a href="#number">#</a>
                                </li>

                                @foreach (var item in Model.AllBrands)
                                {
                                    <li><a href="#@item.FirstLetter">@item.FirstLetter</a></li>
                                }

                            </ul>
                        </nav>
                    </header>
                    @foreach (var item in Model.AllBrands)
                    {
                        <section class="uk-card-body" id="@item.FirstLetter">
                            <div uk-grid="" class="uk-grid">
                                <div class="uk-width-1-1 uk-width-1-6@m uk-first-column">
                                    <h2 class="uk-text-center">@item.FirstLetter</h2>
                                </div>
                                <div class="uk-width-1-1 uk-width-expand@m">
                                    <ul class="uk-grid-small uk-child-width-1-2 uk-child-width-1-4@s uk-child-width-1-5@m uk-grid"
                                        uk-grid="">

                                        @foreach (var brand in item.Brands)
                                        {
                                            <li class="uk-first-column">
                                                <a class="uk-link-muted uk-text-center uk-display-block uk-padding-small uk-box-shadow-hover-large"
                                                   asp-action="All" asp-controller="Product" asp-route-brandid="@brand.Id">
                                                    <div class="tm-ratio tm-ratio-4-3">
                                                        <div class="tm-media-box">
                                                            <figure class="tm-media-box-wrap">
                                                                <img class="item-brand"
                                                                     src="@brand.Image" alt="@brand.Name">
                                                            </figure>
                                                        </div>
                                                    </div>
                                                    <div class="uk-margin-small-top uk-text-truncate">@brand.Name</div>
                                                </a>
                                            </li>
                                        }

                                    </ul>
                                </div>
                            </div>
                        </section>
                    }


                   
                </div>
            </div>
        </div>
    </div>
</section>