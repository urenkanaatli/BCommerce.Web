@model RegisterModel

<div class="uk-section uk-section-muted uk-flex uk-flex-middle uk-animation-fade" uk-height-viewport>
	<div class="uk-width-1-1">
		<div class="uk-container">
			<div class="uk-grid-margin uk-grid uk-grid-stack" uk-grid>
				<div class="uk-width-1-1@m">
					<div class="uk-margin uk-width-large uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">

						<form asp-action="Register" asp-controller="Auth" method="post">
							@Html.AntiForgeryToken()

							<div class="uk-margin">
								<div class="uk-inline uk-width-1-1">
									<span class="uk-form-icon" uk-icon="icon: user"></span>
									<input asp-for="NameSurname" class="uk-input uk-form-large" type="text" placeholder="Ad Soyad">
									
								</div>
								<span class="validationError" asp-validation-for="NameSurname"></span>
							</div>
							<div class="uk-margin">
								<div class="uk-inline uk-width-1-1">
									<span class="uk-form-icon" uk-icon="icon: mail"></span>
									<input asp-for="Email" class="uk-input uk-form-large" type="email" placeholder="Email">


								</div>
								<span class="validationError" asp-validation-for="Email"></span>
							</div>

							<div class="uk-margin">
								<div class="uk-inline uk-width-1-1">
									<span class="uk-form-icon" uk-icon="icon: lock"></span>
									<input asp-for="Password" class="uk-input uk-form-large" type="password" placeholder="Şifre"> 


								</div>
								<span class="validationError" asp-validation-for="Password"></span>
							</div>
							<div class="uk-margin">
								<div class="uk-inline uk-width-1-1">
									<span class="uk-form-icon" uk-icon="icon: lock"></span>
									<input asp-for="PasswordAgain" class="uk-input uk-form-large" type="password" placeholder="Şifre Tekrar">
									

								</div>
								<span class="validationError" asp-validation-for="PasswordAgain"></span>
							</div>

							<div class="uk-margin">
								<input type="submit" class="uk-button uk-button-primary uk-button-large uk-width-1-1" value="Kayıt Ol" />
							</div>
							<div class="uk-text-small uk-text-center">
								Üye isen ? <a asp-action="Login" asp-controller="Auth">Giriş Yap</a>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>